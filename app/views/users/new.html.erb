<!-- app/views/users/new.html.erb -->
<div class="min-h-screen flex items-center justify-center bg-white">
  <div class="w-full max-w-md space-y-6 p-8">
    <h1 class="text-3xl font-bold text-center text-gray-900">新規登録</h1>

    <%= form_with model: @user, url: signup_path, class: "space-y-4" do |f| %>

      <% if @user.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h2 class="font-semibold mb-2"><%= pluralize(@user.errors.count, "件のエラー") %>があります：</h2>
          <ul class="list-disc pl-5 space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "ユーザー名", class: "block mb-1 font-medium" %>
        <%= f.text_field :name, placeholder: "ユーザー名", class: "input input-bordered w-full" %>
      </div>

      <div>
        <%= f.label :email, "メールアドレス", class: "block mb-1 font-medium" %>
        <div class="relative">
          <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
            <i class="fa-solid fa-envelope"></i>
          </span>
          <%= f.email_field :email, placeholder: "メールアドレス", class: "input input-bordered pl-10 w-full" %>
        </div>
      </div>

      <div>
        <%= f.label :password, "パスワード", class: "block mb-1 font-medium" %>
        <div class="relative">
          <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
            <i class="fa-solid fa-lock"></i>
          </span>
          <%= f.password_field :password, placeholder: "パスワード", class: "input input-bordered pl-10 w-full" %>
        </div>
      </div>

      <div>
        <%= f.label :password_confirmation, "パスワード確認", class: "block mb-1 font-medium" %>
        <div class="relative">
          <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
            <i class="fa-solid fa-lock"></i>
          </span>
          <%= f.password_field :password_confirmation, placeholder: "パスワード確認", class: "input input-bordered pl-10 w-full" %>
        </div>
      </div>

      <div class="text-sm space-y-1">
        <label class="block">
          <%= f.check_box :terms_of_service, class: "mr-2" %>
          利用規約に <a href="/terms" class="text-blue-600 underline">同意</a> する
        </label>
        <label class="block">
          <%= f.check_box :privacy_policy, class: "mr-2" %>
          プライバシー規約に <a href="/privacy" class="text-blue-600 underline">同意</a> する
        </label>
      </div>

      <div>
        <%= f.submit "新規登録", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>

<footer class="bg-yellow-50 py-3 text-center text-sm text-gray-700 mt-10">
  <div class="space-x-4">
    <a href="/terms" class="hover:underline">利用規約</a>
    <a href="/privacy" class="hover:underline">プライバシー規約</a>
    <a href="/contact" class="hover:underline">お問い合わせ先</a>
  </div>
</footer>
