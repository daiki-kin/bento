<h1 class="text-center text-2xl font-bold">パスワード再発行</h1>

<%= form_with model: @user, url: password_reset_path(params[:id]), method: :patch, local: true do |f| %>
  <div class="mt-6">
    <%= f.label :password, '新しいパスワード' %>
    <%= f.password_field :password, class: 'input w-full mt-2' %>
  </div>

  <div class="mt-6">
    <%= f.label :password_confirmation, 'パスワード確認' %>
    <%= f.password_field :password_confirmation, class: 'input w-full mt-2' %>
  </div>

  <div class="mt-6 text-center">
    <%= f.submit '登録', class: 'btn btn-primary' %>
  </div>
<% end %>
